{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    { 
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PREACT_APP_FACEBOOK_APP_ID": "@facebook-app-id",
    "PREACT_APP_FACEBOOK_APP_SECRET": "@facebook-app-secret",
    "PREACT_APP_FACEBOOK_PAGE_TOKEN": "@facebook-page-token",
    "PREACT_APP_FACEBOOK_REDIRECT_URI": "@facebook-redirect-uri",
    "PREACT_APP_CLOUDINARY_CLOUD_NAME": "@cloudinary-cloud-name",
    "PREACT_APP_CLOUDINARY_API_KEY": "@cloudinary-api-key",
    "PREACT_APP_CLOUDINARY_API_SECRET": "@cloudinary-api-secret",
    "PREACT_APP_CLOUDINARY_UPLOAD_PRESET": "@cloudinary-upload-preset"
  }
}
